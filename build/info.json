{
  "identifier": "com.bobplugin.zhipu-nothink",
  "version": "1.0.1",
  "category": "translate",
  "name": "GLM 4.5 翻译 (关闭思考)",
  "summary": "基于智谱 GLM-4.5-Flash 的快速翻译插件，避免触发思考功能以提升翻译速度",
  "icon": "icon.svg",
  "author": "波菠菜",
  "homepage": "https://github.com/bobocai/bob-zhipu-nothink",
  "appcast": "https://raw.githubusercontent.com/bobocai/bob-zhipu-nothink/main/appcast.json",
  "minBobVersion": "0.5.0",
  "options": [
    {
      "identifier": "apiKey",
      "type": "text",
      "title": "API Key",
      "desc": "智谱 AI 开放平台的 API Key",
      "textConfig": {
        "type": "secure",
        "height": 20,
        "placeholder": "请输入智谱 AI 的 API Key"
      }
    },
    {
      "identifier": "model",
      "type": "menu",
      "title": "模型",
      "desc": "选择要使用的智谱模型",
      "defaultValue": "glm-4.5-flash",
      "menuValues": [
        {
          "title": "GLM-4.5-Flash（免费）",
          "value": "glm-4.5-flash"
        },
        {
          "title": "GLM-4.5-Air",
          "value": "glm-4.5-air"
        },
        {
          "title": "GLM-4.5-AirX",
          "value": "glm-4.5-airx"
        },
        {
          "title": "GLM-4.5",
          "value": "glm-4.5"
        }
      ]
    },
    {
      "identifier": "customPrompt",
      "type": "text",
      "title": "自定义提示词",
      "desc": "可选：自定义翻译提示词，留空使用默认提示词",
      "textConfig": {
        "type": "multiline",
        "height": 60,
        "placeholder": "例如：请将以下文本翻译成{to}，保持原文的语气和风格"
      }
    },
    {
      "identifier": "temperature",
      "type": "slider",
      "title": "创造性",
      "desc": "控制翻译的创造性，较低的值会产生更一致的翻译",
      "defaultValue": "0.1",
      "minValue": "0.0",
      "maxValue": "1.0",
      "step": "0.1"
    },
    {
      "identifier": "timeout",
      "type": "slider",
      "title": "请求超时时间 (秒)",
      "desc": "API 请求的超时时间",
      "defaultValue": "10",
      "minValue": "5",
      "maxValue": "60",
      "step": "5"
    }
  ]
}